generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}


model usuario {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  emailValidado Boolean  @default(false)
}

model perfilUser {

id Int  @id @default(autoincrement())
name String?
email String @unique
numTel Int
direccion String
}